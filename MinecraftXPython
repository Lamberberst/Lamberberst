print("В вашем сундуке:")
for i in mas:
    print(i)

print("Общее количество предметов в сундуке:", len(mas))

ind = int(input("Введите номер предмета: "))
print("Под номером", ind, "находится", mas[ind-1])

print("Введите начальный и конечный индекс чтобы увидеть срез вашего сундука:")
begin_ind = int(input("Введите начальный индекс: "))
end_ind = int(input("Введите конечный индекс: "))
print("В срезе сундука", begin_ind, "до", end_ind, "находится:")
for j in mas[begin_ind:end_ind+1]:
    print(j)

print("Вы нашли шалкер с ресурсами!")
paket = ["Алмазный меч", "Железная кирка", "Железный топор"]
input("Нажмите Enter что бы забрать вещи ")
mas += paket
print("В вашем сундуке находится:")
for k in mas:
    print(k)
mas = ["Уголь", "Железо", "Золото", "Алмаз", "Изумруд"]


print("Вам выпал шанс заменить любой предмет на какой либо другой!")
q1 = int(input("Напиши номер предмета который хочешь изменить: "))
q2 = input("Напиши предмет который хочешь добавить: ")
mas[q1-1] = q2
for o in mas:
    print(o)

print("Вам хватает денег чтобы купить один предмет! А именно: Лазурит")
input("Нажмите Enter чтобы купить этот предмет")
lazurit = "Лазурит"
mas.append(lazurit)
print("Теперь в вашем сундуке есть:")
for h in mas:
    print(h)
